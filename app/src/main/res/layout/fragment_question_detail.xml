<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.QuestionDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="235dp"
        android:layout_height="228dp"
        android:src="@drawable/detail"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"/>

    <TextView
        android:id="@+id/id_current_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_gravity="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/id_type_of_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/id_current_answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/id_current_answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="140dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/id_current_answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="180dp"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/id_current_correct_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="220dp"
        android:layout_marginStart="30dp"/>

</FrameLayout>